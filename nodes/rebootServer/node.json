{
  "name": "rebootServer",
  "ns": "pkgcloud",
  "title": "Reboot Server",
  "description": "Reboots a server",
  "ports": {
    "input": {
      "client": {
        "title": "Client",
        "type": "object",
        "required": true
      },
      "server": {
        "title": "Server",
        "type": "object",
        "required": true
      },
      "type": {
        "title": "Reboot Type",
        "enum": ["HARD","SOFT"] 
      }
    },
    "output": {
      "result": {
        "title": "Result",
        "type": "object"
      }
    }
  }
}
